<?xml version='1.0' encoding='utf-8'?>

<widget xmlns   = "http://www.w3.org/ns/widgets" 
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.hanb.metronome" 
    versionCode = "1"
    version     = "1.0.0" >


  <name>Metronome</name>
  <description>A Metronome App</description>
  <author href="" email="support@memorytime.com">Brian H</author>
  <content src="index.html" />

  <preference name="permissions" value="none"/>
  <preference name="orientation"                value="portrait" />        <!-- all: default means both landscape and portrait are enabled -->
  <preference name="fullscreen"                 value="false" />           <!-- all: hides the status bar at the top of the screen -->
  <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
  <preference name="android-minSdkVersion" value="25" />
  <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="FadeSplashScreen" value="false" />
  <preference name="SplashScreenDelay" value="3000" />
  <preference name="SplashScreen" value="splash" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <icon src="icon.png" />
  <splash src="splash.png" />

  <platform name="android">
    <icon density="ldpi" src="www/img/icon/android/icon-36-ldpi.png" />
    <icon density="mdpi" src="www/img/icon/android/icon-48-mdpi.png" />
    <icon density="hdpi" src="www/img/icon/android/icon-72-hdpi.png" />
    <icon density="xhdpi" src="www/img/icon/android/icon-96-xhdpi.png" />
    <icon density="xxhdpi" src="www/img/icon/android/icon-144-xxhdpi.png" />
    <icon density="xxxhdpi" src="www/img/icon/android/icon-192-xxxhdpi.png" />

    <splash qualifier="land-ldpi" src="www/img/splash/android/screen-ldpi-landscape.png" />
    <splash qualifier="land-mdpi" src="www/img/splash/android/screen-mdpi-landscape.png" />
    <splash qualifier="land-hdpi" src="www/img/splash/android/screen-hdpi-landscape.png" />
    <splash qualifier="land-xhdpi" src="www/img/splash/android/screen-xhdpi-landscape.png" />
    <splash qualifier="land-xxhdpi" src="www/img/splash/android/screen-xxhdpi-landscape.png" />
    <splash qualifier="land-xxxhdpi" src="www/img/splash/android/screen-xxxhdpi-landscape.png" />
    <splash qualifier="port-ldpi" src="www/img/splash/android/screen-ldpi-portrait.png" />
    <splash qualifier="port-mdpi" src="www/img/splash/android/screen-mdpi-portrait.png" />
    <splash qualifier="port-hdpi" src="www/img/splash/android/screen-hdpi-portrait.png" />
    <splash qualifier="port-xhdpi" src="www/img/splash/android/screen-xhdpi-portrait.png" />
    <splash qualifier="port-xxhdpi" src="www/img/splash/android/screen-xxhdpi-portrait.png" />
    <splash qualifier="port-xxxhdpi" src="www/img/splash/android/screen-xxxhdpi-portrait.png" />
  </platform>

  <access /> 

  <allow-intent href="http://*/*" />

</widget>
